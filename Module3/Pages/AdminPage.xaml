<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Module3.Pages"
      xmlns:ModelClasses="clr-namespace:Module3.ModelClasses" x:Class="Module3.Pages.AdminPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Page.Resources>
        <CollectionViewSource x:Key="accountsViewSource" d:DesignSource="{d:DesignInstance {x:Type ModelClasses:Accounts}}"/>
    </Page.Resources>

    <Grid Background="White" DataContext="{StaticResource accountsViewSource}">
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Страница Администратора" VerticalAlignment="Top" Height="55" Width="680" TextAlignment="Center" LineHeight="24" FontSize="25"/>

        <DataGrid x:Name="accountsDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" ItemsSource="{Binding}" RowDetailsVisibilityMode="VisibleWhenSelected" HorizontalAlignment="Center" VerticalAlignment="Center" Height="260" Width="550">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="iDColumn" Binding="{Binding ID}" Header="ID" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="loginColumn" Binding="{Binding Login}" Header="Login" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="passwordColumn" Binding="{Binding Password}" Header="Password" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="fullNameColumn" Binding="{Binding FullName}" Header="Full Name" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="badLoginTryColumn" Binding="{Binding BadLoginTry}" Header="Bad Login Try" Width="SizeToHeader"/>
                <DataGridTemplateColumn x:Name="lastDateAuthorizationColumn" Header="Last Date Authorization" Width="SizeToHeader">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker SelectedDate="{Binding LastDateAuthorization, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn x:Name="roleIDColumn" Binding="{Binding RoleID}" Header="Role ID" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="statusIDColumn" Binding="{Binding StatusID}" Header="Status ID" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid HorizontalAlignment="Center" Margin="0,0,0,29" Width="600" Height="31" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="Добавить" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Height="31" Click="AddButton_Click" />
            <Button Grid.Column="1" Content="Изменить" Width="120" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="31" Click="UpdateButton_Click" />
            <Button Grid.Column="2" Content="Удалить" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Height="31" Click="DeleteButton_Click"/>
        </Grid>

    </Grid>
</Page>
